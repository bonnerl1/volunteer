page {
  /* background-color: #e66266; */
  background-color: #d36868;
}
.text {
  display: inline-block;
  height: 70rpx;
  width: 18%;
  padding-left: 20rpx;
  position: relative;
  top: -27%;
  line-height: 70rpx;
  font-size: 30rpx;
  font-weight: 700;
}
.login-img {
  width: 100%;
  height: 200rpx;
  text-align: center;
  margin-top: 40rpx;
}

.login-img image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

form {
  width: 85%;
  height: 730rpx;
  /* background-color: rgba(255, 255, 255, 0.904); */
  background-color: #fff;
  margin: 0 auto;
  margin-top: 5%;
  border-radius: 20rpx;
  box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
  padding: 0 20rpx;
}

.login {
  border-top: 1rpx solid rgb(160, 159, 159);
  border-bottom: 1rpx solid rgb(139, 138, 138);
  height: 80rpx;
}

input {
  display: inline-block;
  width: 70%;
  height: 70rpx;
  font-size: 30rpx;
}

form button {
  margin: 30rpx 0;
}

#loginbtn {
  padding: 0;
  width: 550rpx;
  height: 70rpx;
  font-size: 30rpx;
  background-color: #f04f54;
  color: #fff;
  border-radius: 40rpx;
  line-height: 70rpx;
}

#resetbtn {
  padding: 0;
  width: 550rpx;
  height: 70rpx;
  font-size: 30rpx;
  background-color: #f04f54;
  color: #fff;
  border-radius: 40rpx;
  line-height: 70rpx;
}

.register {
  font-size: 26rpx;
  float: right;
  margin-right: 65rpx;
  margin-top: 20rpx;
  color: gray;
}

.headtext {
  text-align: center;
  font-weight: 700;
  font-size: 50rpx;
  color: #fff;
  margin-top: 15%;
}