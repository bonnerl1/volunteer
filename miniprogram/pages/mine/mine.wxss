.head {
  position: relative;
  width: 100%;
  height: 500rpx;
  margin-bottom: 40rpx;
}

.img {
  position: absolute;
  width: 100%;
  height: 500rpx;
  border-radius: 0 0 20rpx 20rpx;
}

.user {
  display: inline-block;
  position: absolute;
  z-index: 100;
  display: flex;
  flex-direction: row;
  align-items: center;
  top: 249rpx;
  left: 60rpx;
}

.user image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  float: left;
}
.user view {
  float: left;
  margin-left: 30rpx;
  font-weight: 700;
  color: #000;
  font-size: 35rpx;
}
.Integral{
  position: relative;
  width: 90%;
