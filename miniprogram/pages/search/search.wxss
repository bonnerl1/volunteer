.search{
  width: 90%;
  margin: 20rpx auto;
  margin-bottom: 80rpx;
}

.int{
  width: 73%;
  height: 75rpx;
  line-height: 75rpx;
  /* border: 1rpx solid gray; */
  border-radius: 10rpx;
  float: left;
  background-color: rgb(228, 224, 224);
  color: gray;
  padding: 0 15rpx;
}
#find{
  float: left;
  background-color: #f04f54;
  color: #fff;
  width: 130rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size:32rpx;
  padding: 0;
  border-radius: 20rpx;
  margin-left: 15rpx;
}
.main{
  position: relative;
  top: -20rpx;
}
.content{
  /* position: relative; */
  width: 90%;
  height: 200rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin: 0 auto;
  margin-bottom: 70rpx;
}
.content-img image{
  margin-right: 15px;
  float: left;
  position: relative;
  top: -20rpx;
  width: 32%;
  height: 220rpx;
  border-radius: 20rpx;
  box-shadow:  2px 2px 2px 2px rgba(0, 0, 0, 0.2);
}
.content-text{
  height: 180rpx;
  padding: 10rpx 0;
  float: left;
  width: 60%;
}
.title{
  width: 100%;
  height: 60rpx;
  font-weight: 700;
  font-size: 35rpx;
  overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap
}
.describe{
  width: 100%;
  height: 77rpx;
  color: gray;
  font-size: 27rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.date{
  float:right;
  font-size: 27rpx;
  color: gray;
  margin-top: 10rpx;
}
